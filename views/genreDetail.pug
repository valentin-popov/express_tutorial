extends layout

block content

  h1 Genre: #{genre.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in books
        dt
          a(href=book.url) #{book.title}
        dd #{book.description}

      else
        p This genre has no books.
    
    hr
    p
      a(href=genre.url+'/update') Update genre
    p
      a(href=genre.url+'/delete') Delete genre
